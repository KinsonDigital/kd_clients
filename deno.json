{
	"version": "v1.0.0-preview.5",
    "tasks": {
        "build": "deno run -A ./.github/cicd/scripts/deno-check.ts"
    },
	"lint": {
		"include": [
			"core/",
			"GitHubClients/",
			"OtherClients/",
			"PackageClients/",
			"tests/"
		]
	},
	"fmt": {
		"include": [
			"core/",
			"GitHubClients/",
			"OtherClients/",
			"PackageClients/",
			"tests/"
		],
		"exclude": [
			"**/*.md",
			"**/*.json",
			"**/*.js",
			"**/*.yml",
			"**/*.yaml"
		],
		"useTabs": true,
		"lineWidth": 130,
		"indentWidth": 4,
		"semiColons": true,
		"singleQuote": false
	}
}
