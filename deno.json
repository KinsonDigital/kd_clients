{
    "lint": {
        "include": [
            "core/",
            "GitHubClients/",
            "OtherClients/",
            "PackageClients/",
            "tests/"    
        ]
    },
    "fmt": {
        "include": [
            "core/",
            "GitHubClients/",
            "OtherClients/",
            "PackageClients/",
            "tests/"
        ],
        "exclude": [
            "**/*.md",
            "**/*.json",
            "**/*.js",
            "**/*.yml",
            "**/*.yaml"
        ],
        "useTabs": true,
        "lineWidth": 130,
        "indentWidth": 4,
        "semiColons": true,
        "singleQuote": false
    }
}
