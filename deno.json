{
	"version": "v1.0.0-preview.13",
    "tasks": {
        "check": "deno check ./**/*.ts",
        "test": "deno test -A ./tests/*Tests.ts",
        "test-watch": "deno test --watch -A ./tests/*Tests.ts",
        "lint": "deno lint",
        "format": "deno fmt ./**/*.ts",
        "format-check": "deno fmt ./**/*.ts --check",
        "reload-cache": "deno cache ./**/*.ts --reload"
    },
	"lint": {
		"include": [
			"**/*.ts",
            ".github/**/*.ts"
		],
        "exclude": [
            ".github/cicd/playground.ts"
        ]
	},
	"fmt": {
		"include": [
			"core/",
			"GitHubClients/",
			"OtherClients/",
			"PackageClients/",
			"tests/"
		],
		"exclude": [
			"**/*.md",
			"**/*.json",
			"**/*.js",
			"**/*.yml",
			"**/*.yaml"
		],
		"useTabs": true,
		"lineWidth": 130,
		"indentWidth": 4,
		"semiColons": true,
		"singleQuote": false
	}
}
