	"files.exclude": {
		"**/.git": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/CVS": true,
		"**/.DS_Store": true,
		"**/Thumbs.db": true,
		"**/node_modules": true,
	},
    "deno.enable": true,
	"deno.lint": true,
	"files.eol": "\n",
	"window.title": "ðŸ¦•KD_CLIENTS",
