{
    "version": "0.2.0",
    "configurations": [
		{ // PLAYGROUND
            "name": "Playground",
            "request": "launch",
            "type": "node",
            "program": "${workspaceFolder}/.github/cicd/playground.ts",
			"cwd": "${workspaceFolder}",
            "runtimeArgs": [
                "run",
                "--inspect-wait",
                "--allow-all",
            ],
			"env": {
				"OWNER_NAME": "KinsonDigital",
				"REPO_NAME": "kd_clients",
				"GITHUB_TOKEN": "${env:CICD_TOKEN}",
				"WORKING_DIR": "${workspaceFolder}",
			},
            "attachSimplePort": 9229,
            "runtimeExecutable": "npm",
			"outputCapture": "std",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "windows": {
                "runtimeExecutable": "${userHome}\\.deno\\bin\\deno.exe"
            },
            "linux": {
                "runtimeExecutable": "${userHome}/.deno/bin/deno"
            },
        },
		{ // DEBUG TEST TILE
            "name": "Debug Test File",
            "request": "launch",
            "type": "node",
            "cwd": "${workspaceFolder}/tests",
            "runtimeArgs": [
                "test",
                "--inspect-brk",
                "--allow-all",
				"${fileBasename}",
            ],
            "attachSimplePort": 9229,
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "windows": {
                "runtimeExecutable": "${userHome}\\.deno\\bin\\deno.exe"
            },
            "linux": {
                "runtimeExecutable": "${userHome}/.deno/bin/deno"
            },
        },
		{ // VERSION CHECKER
            "name": "Version Checker",
            "request": "launch",
            "type": "node",
            "program": "${workspaceFolder}/.github/cicd/scripts/version-checker.ts",
			"cwd": "${workspaceFolder}",
            "runtimeArgs": [
                "run",
                "--inspect-wait",
                "--allow-net"
            ],
			"args": [
				"KinsonDigital",
				"kd_clients",
				"preview",
				"v0.0.6",
				"${env:CICD_TOKEN}"
			],
            "attachSimplePort": 9229,
            "runtimeExecutable": "npm",
			"outputCapture": "std",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "windows": {
                "runtimeExecutable": "${userHome}\\.deno\\bin\\deno.exe"
            },
            "linux": {
                "runtimeExecutable": "${userHome}/.deno/bin/deno"
            },
        },
		{ // GET VERSION
            "name": "Get Version",
            "request": "launch",
            "type": "node",
            "program": "${workspaceFolder}/.github/cicd/scripts/get-version.ts",
			"cwd": "${workspaceFolder}",
            "runtimeArgs": [
                "run",
				"-ERW",
                "--inspect-wait",
            ],
            "attachSimplePort": 9229,
            "runtimeExecutable": "npm",
			"outputCapture": "std",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "windows": {
                "runtimeExecutable": "${userHome}\\.deno\\bin\\deno.exe"
            },
            "linux": {
                "runtimeExecutable": "${userHome}/.deno/bin/deno"
            },
		},
		{ // CHECK RELEASE NOTES
            "name": "Check Release Notes",
            "request": "launch",
            "type": "node",
            "program": "${workspaceFolder}/.github/cicd/scripts/check-release-notes.ts",
			"cwd": "${workspaceFolder}",
            "runtimeArgs": [
                "run",
                "--inspect-wait",
				"-E",
            ],
			"args": [
				"preview",
				"v1.0.0-preview.1"
			],
            "attachSimplePort": 9229,
            "runtimeExecutable": "npm",
			"outputCapture": "std",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "windows": {
                "runtimeExecutable": "${userHome}\\.deno\\bin\\deno.exe"
            },
            "linux": {
                "runtimeExecutable": "${userHome}/.deno/bin/deno"
            },
		},
		{ // BUILD (DENO CHECK)
            "name": "Build (Deno Check)",
            "request": "launch",
            "type": "node",
            "program": "${workspaceFolder}/.github/cicd/scripts/deno-check.ts",
			"cwd": "${workspaceFolder}",
            "runtimeArgs": [
                "run",
                "--inspect-wait",
				"-E",
				"--allow-run",
            ],
            "attachSimplePort": 9229,
            "runtimeExecutable": "npm",
			"outputCapture": "std",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "windows": {
                "runtimeExecutable": "${userHome}\\.deno\\bin\\deno.exe"
            },
            "linux": {
                "runtimeExecutable": "${userHome}/.deno/bin/deno"
            },
		}
    ],
}
